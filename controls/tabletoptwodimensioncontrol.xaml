?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="OpenVTT.Controls.Tabletop2DControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="800">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <ToolBar>
      <Button Click="AddToken_Click">Add Token</Button>
      <Button Click="ClearTokens_Click">Clear Tokens</Button>
      <Separator/>
      <TextBlock VerticalAlignment="Center">Grid</TextBlock>
      <Slider x:Name="GridSize" Minimum="24" Maximum="96" Width="150" Value="48" ValueChanged="GridSize_ValueChanged"/>
      <TextBlock VerticalAlignment="Center">Zoom</TextBlock>
      <Slider x:Name="Zoom" Minimum="0.25" Maximum="3" Value="1" Width="150" ValueChanged="Zoom_ValueChanged"/>
      <Separator/>
      <Button Click="OpenMap_Click">Open Map...</Button>
    </ToolBar>

    <ScrollViewer Grid.Row="1" x:Name="Scroll" Background="#FFFBEA">
      <Grid>
        <Grid.RenderTransform>
          <ScaleTransform x:Name="ZoomTx" ScaleX="1" ScaleY="1"/>
        </Grid.RenderTransform>
        <Canvas x:Name="Board" Width="1600" Height="1000" Background="{Binding ElementName=Board, Path=Tag}">
          <!-- Tokens are child elements placed here -->
        </Canvas>
      </Grid>
    </ScrollViewer>
  </Grid>
</UserControl>
